@model MediaRequest.WebUI.ViewModels.IndexViewModel


@if (Model.Movies != null)
{
    <div class="movie-hero">
        <div class="movie-hero-content">
            <div class="text-body">
                <h3>Recently Added:</h3>
                <h1>@Model.LatestMovie.Title </h1>
                <p>@Model.LatestMovie.Overview</p>
                <div class="button-container">
                    <a asp-action="ShowMovie" asp-controller="Movie" asp-route-slug="@Model.LatestMovie.TitleSlug" class="btn btn-primary btn-shadow">Go to movie page <i class="fas fa-film"></i></a>
                </div>
            </div>
            <div class="movie-hero-poster">
                <img src="@Model.LatestMovie.PosterUrl" />
            </div>
        </div>
        <div class="background">
            <img src="@Model.LatestMovie.FanartUrl" />
        </div>
    </div>

    <div class="container">
        <div class="movie-list-header">
            <h1>Existing movies</h1>
            <form asp-action="Index" asp-controller="Home" method="post" data-ajax="true" data-ajax-mode="replace" data-ajax-update=".movie-list-container" data-ajax-method="post">
                <div class="input-container">
                    <i class="fas fa-search"></i>
                    <input name="term" placeholder="Search.." />
                </div>
            </form>
        </div>

        <partial name="_MovieListPartial" model="Model.Movies" />
    </div>

