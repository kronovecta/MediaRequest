@model MediaRequest.WebUI.ViewModels.Account.UpdatePasswordViewModel

@{ 
    if (TempData["error"] != null)
    {
        var msg = TempData["error"].ToString();
        <span class="alert">@msg</span>
    }
}

<div class="form-container">
    <h1>Update Password</h1>
    <form asp-action="UpdatePassword" method="post" asp-controller="UserController">
        <div class="form-group">
            <label asp-for="@Model.CurrentPassword">Current</label>
            <input asp-for="@Model.CurrentPassword" type="password" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.NewPassword">New Password</label>
            <input asp-for="@Model.NewPassword" type="password" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
            <input asp-for="@Model.ConfirmPassword" type="password" />
        </div>

        <div class="form-group" style="margin:0">
            <input class="btn btn-default" type="submit" value="Update" />
        </div>
    </form>
</div>